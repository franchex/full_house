<div class="multi-button">
  <% @bills_categories.each_with_index do |category, index| %>
    <%= link_to new_space_bill_path(current_user.spaces.first, category: category) do %>
    <button><i class="fa-solid fa-<%= @bills_categories_icons[index] %> "></i><%= category %></button>
    <% end %>
  <% end %>
   <%= link_to new_space_bill_path(current_user.spaces.first) do %>
   <button><i class="fa-solid fa-plus"></i>Add</button>
  <% end %>
</div>

<div class="parent-bill">
  <div class="bills-scroll ">
    <% bills.reverse.each do |bill| %>
            <div class="task-box blue multi-button">
              <div class="description-task">
                <div class="bill-category"><%= bill.category %></div>
                <div class="bill-payer"><p>Payer: <%= bill.payer.first_name %></p></div>
                <div class="task-amount"><p>Amount: $<%= bill.amount %></p></div>
                <div class="d-flex justify-content-between">
                  <div class="bill due_date"><p>Due date: <%= bill.due_date %></p></div>
                  <%= link_to space_bill_path(bill.space, bill), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                   <button><i class="fa-solid fa-trash"></i>delete</button>
                 <% end %>
                </div>
              </div>
            </div>
        <% end %>
  </div>
</div>
