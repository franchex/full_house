<%= simple_form_for [@space, @chore] do |f| %>
  <%= f.input :category, input_html: {value: @category, disabled: :true} %>
  <%= f.input :description %>
  <%= f.association :user,collection: @space.users, label_method: :first_name, value_method: :id, include_blank: false %>
  <%= f.input :due_date %>
  <%= f.submit %>
<% end %>
