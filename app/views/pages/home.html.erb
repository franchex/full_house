              <% else %>
              <div class="multi-button mx-3">
                <a href="<%= new_user_session_path %>"><button><i class="fa-solid fa-right-to-bracket"></i> Log in</button></a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
