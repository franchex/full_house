
<div class="bg-white p-5 h-50">
  <h2>New space</h2>
  <%= simple_form_for [current_user, @space] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Add" %>
    </div>
  <% end %>
</div>
