<div class="task-manager">
  <div class="left-bar">
     <%= render "pages/sidebar" %>
  </div>
  <div class="page-content">
    <% if user_signed_in? %>
      <div ><%= render "pages/page_content", space: current_user.spaces.first %></div>
      <div class="active Bills"><%= render "bills/bills" %></div>
      <div class="inactive Lists"><%= render "shopping_lists/shopping_lists" %></div>
      <div class="inactive Chores"><%= render "chores/chores", chores_categories: @chores_categories %></div>
      <div class="inactive Expenses"><%= render "expenses/expenses", expenses_categories: @expenses_categories %></div>
    <% end %>
  </div>
  <div class="right-bar">
    <%= render "tasks/my_tasks" %>
  </div>
</div>
